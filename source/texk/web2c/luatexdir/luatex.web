@d add_glue_ref(#)==incr(glue_ref_count(#)) {new reference to a glue spec}

@p function tail_of_list (@!p:pointer):pointer;
var q:pointer;
begin
  q:=p;
  while vlink(q)<>null do q:=vlink(q);
  tail_of_list:=q;
end;

