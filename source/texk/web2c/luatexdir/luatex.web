  end;
push_nest; mode:=-k;
if k=vmode then
  begin prev_depth:=pdf_ignored_dimen;
  if every_vbox<>null then begin_token_list(every_vbox,every_vbox_text);
  end
else  begin space_factor:=1000;
  if every_hbox<>null then begin_token_list(every_hbox,every_hbox_text);
  end;
