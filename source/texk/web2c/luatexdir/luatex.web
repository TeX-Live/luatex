  if i<>0 then info(p):=t-c+i;
  end
else if is_active_csname(t-cs_token_flag) then begin
  c:=active_csname_value(t-cs_token_flag);
  if b=uc_code_base then
     i:=get_uc_code(c)
  else
     i:= get_lc_code(c);
  if i<>0 then info(p):=active_to_cs(i,true)+cs_token_flag;
